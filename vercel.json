{
  "version": 2,
  "buildCommand": "cd backend && npm install && npx prisma generate",
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"]
      }
    },
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    },
                {
                    "src": "frontend/assets/**",
                    "use": "@vercel/static"
                },
                {
                    "src": "frontend/public/templates/**",
                    "use": "@vercel/static"
                }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/templates/(.*)",
      "dest": "/frontend/public/templates/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
