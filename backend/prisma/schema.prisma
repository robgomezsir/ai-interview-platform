// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Candidate {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  
  interviews Interview[]

  @@map("candidates")
}

model Interview {
  id           String      @id @default(uuid())
  candidate    Candidate   @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  candidateId  String      @map("candidate_id")
  jobProfile   String      @map("job_profile")
  status       String      @default("IN_PROGRESS")
  chatHistory  String?     @map("chat_history")
  startedAt    DateTime    @default(now()) @map("started_at")
  completedAt  DateTime?   @map("completed_at")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  
  evaluation   Evaluation?

  @@map("interviews")
}

model Evaluation {
  id             String    @id @default(uuid())
  interview      Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  interviewId    String    @unique @map("interview_id")
  overallScore   Float?    @map("overall_score")
  evaluationData String    @map("evaluation_data")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@map("evaluations")
}

model TrainingPrompt {
  id              String   @id @default(uuid())
  name            String
  category        String   // "INTERVIEW", "CUSTOMER_SERVICE", "SALES", "TECHNICAL"
  promptType      String   // "INITIAL_MESSAGE", "FOLLOW_UP", "EVALUATION", "CUSTOM"
  content         String
  language        String   @default("pt-BR") // "pt-BR", "en-US", "es-ES"
  behavior        String   @default("PROFESSIONAL") // "PROFESSIONAL", "FRIENDLY", "FORMAL", "CASUAL"
  tone            String   @default("NEUTRAL") // "NEUTRAL", "POSITIVE", "ENCOURAGING", "CHALLENGING"
  context         String?  // Contexto específico do prompt
  expectedResponse String? // Resposta esperada do candidato
  evaluationCriteria String? // Critérios de avaliação
  difficulty      String   @default("MEDIUM") // "EASY", "MEDIUM", "HARD", "EXPERT"
  timeLimit       Int?     // Limite de tempo em segundos
  keywords        String?  // Palavras-chave relacionadas (JSON array)
  isActive        Boolean  @default(true)
  priority        Int      @default(0)
  metadata        String?  // JSON with additional configuration
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("training_prompts")
}

model AITrainingSession {
  id          String   @id @default(uuid())
  sessionName String
  description String?
  prompts     String   // JSON array of prompt IDs used
  results     String?  // JSON with training results
  status      String   @default("PENDING") // "PENDING", "RUNNING", "COMPLETED", "FAILED"
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("ai_training_sessions")
}

